{
  "name": "flipstarter-backend",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node-dev --respawn src/server.ts",
    "start:dev": "ts-node ./src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "prod:install": "npm ci --omit=dev",
    "prod:build": "npm run build",
    "prod:pm2:delete": "pm2 delete teyolia-api || true",
    "prod:pm2:start": "pm2 start dist/server.js --name teyolia-api --cwd /root/teyolia/backend --time",
    "prod:pm2:save": "pm2 save",
    "prod:pm2:restart": "pm2 restart teyolia-api --update-env",
    "prod:logs": "pm2 logs teyolia-api --lines 80",
    "migrate:campaigns": "ts-node src/scripts/migrateCampaigns.ts",
    "migrate:campaigns:js": "node scripts/migrateCampaigns.js",
    "test": "vitest run",
    "lint": "echo \"TODO: add eslint\""
  },
  "dependencies": {
    "@ecash/lib": "1.5.1-rc3",
    "b58-ts": "^0.1.0",
    "chronik-client": "^4.1.0",
    "cors": "^2.8.5",
    "ecashaddrjs": "^1.6.2",
    "express": "^4.18.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/node": "^20.14.2",
    "@types/supertest": "^2.0.16",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  }
}
